<Fluent:RibbonWindow  xmlns:Fluent="urn:fluent-ribbon" x:Class="MyShop.Form.ProductForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop.Form"
        mc:Ignorable="d"
        Title="ProductForm" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Nhập tên sản phẩm"></Label>
        <TextBox Width="250" Height="25" Name="tbName"></TextBox>
        <Label Content="Nhập giá tiền"></Label>
        <TextBox Width="250" Height="25" Name="tbPrice"></TextBox>
        <Label Content="Nhập số lượng" ></Label>
        <TextBox Width="250" Height="25"  Name="tbQuantity"></TextBox>
        <Label Content="Chọn Category"></Label>
        <ComboBox Name="cbbCategory" DisplayMemberPath="Name"></ComboBox>
        <Button>Chọn hình ảnh</Button>
        <Button Name="btnDone">Hoàn tất</Button>
        <Button Name="btnClose">Thoát</Button>
    </StackPanel>
</Fluent:RibbonWindow>
